{
	"name": "vscode-JS-CSS-HTML-formatter",
	"displayName" : "JS-CSS-HTML Formatter",
	"description": "Format and beautify JS, CSS, HTML code by using RMB",
	"version": "0.0.4",
	"publisher": "lonefy",
    "galleryBanner": {
        "color": "#ddd",
        "theme": "light"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lonefy/vscode-js-css-html-formatter/issues",
        "email": "lonefy@foxmail.com"
    },
    "homepage": "https://github.com/lonefy/vscode-js-css-html-formatter/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/lonefy/vscode-js-css-html-formatter"
    },	
	"engines": {
		"vscode": "^0.10.1"
	},
	"activationEvents": [
        "onLanguage:css",
		"onLanguage:javascript",
        "onLanguage:html"
	],
	"main": "./out/src/extension",
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"dependencies": {
		"js-beautify": "^1.5.10"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "0.10.x"
	}
}
